    </graphicData>
    <ingestible>
      <foodType>Plant</foodType>
      <preferability>RawBad</preferability>
    </ingestible>
    <plant>
      <fertilityMin>0.5</fertilityMin>
      <fertilitySensitivity>1.0</fertilitySensitivity>
      <soundHarvesting>Harvest_Standard</soundHarvesting>
      <soundHarvestFinish>Harvest_Standard_Finish</soundHarvestFinish>
      <harvestWork>200</harvestWork>
      <sowWork>300</sowWork>
      <topWindExposure>0.1</topWindExposure>
      <growMinGlow>0</growMinGlow>
      <growOptimalGlow>0</growOptimalGlow>
      <visualSizeRange>
        <min>0.2</min>
        <max>0.5</max>
      </visualSizeRange>
      <cavePlant>true</cavePlant>
      <wildOrder>1</wildOrder>
      <wildEqualLocalDistribution>false</wildEqualLocalDistribution>
    </plant>
  </ThingDef>
  
  <ThingDef ParentName="PlantBaseMushroom">
    <defName>PlantCremini</defName>
    <label>Cremini Plant</label>
    <description>Tasty, protein-rich, mushroom that can be used as meat-substitute. Can be eaten raw.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>1</Beauty>
      <Nutrition>0.20</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Things/Plants/CreminiPlant</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <neverMultiSelect>false</neverMultiSelect>
    <pathCost>10</pathCost>
    <plant>
      <neverBlightable>true</neverBlightable>
      <fertilitySensitivity>0.4</fertilitySensitivity>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawCremini</harvestedThingDef>
      <harvestYield>8</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <sowMinSkill>8</sowMinSkill>
      <topWindExposure>0.1</topWindExposure>
      <growDays>7</growDays>
      <visualSizeRange>
        <min>0.3</min>
        <max>0.8</max>
      </visualSizeRange>
      <wildClusterRadius>3</wildClusterRadius>
      <wildClusterWeight>5</wildClusterWeight>
      <purpose>Food</purpose>
    </plant>
  </ThingDef>
  
