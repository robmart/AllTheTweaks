<Patch>
  <Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName = "Thrumbo"]/race</xpath>
    <value>
      <nameOnTameChance>1</nameOnTameChance>
      <nuzzleMtbHours>80</nuzzleMtbHours>
      <nameOnNuzzleChance>1</nameOnNuzzleChance>
    </value>
  </Operation>
	
  <Operation Class="PatchOperationAdd">
    <xpath>*/ThingDef[defName = "Thrumbo"]/race</xpath>
    <value>
      <manhunterOnTameFailChance>0</manhunterOnTameFailChance>
    </value>
  </Operation>
	
  <Operation Class="PatchOperationReplace">
    <xpath>*/ThingDef[defName = "Thrumbo"]/race/wildness</xpath>
    <value>
      <wildness>0.9</wildness>
    </value>
  </Operation>
	
  <Operation Class="AllTheTweaks.PatchOperation.ATTPatchOperationToggleable">
    <enabled>True</enabled>
    <mods>
      <li>Core</li>
    </mods>
    <label>_canThrumbosGrowWool</label>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationConditional">
          <xpath>*/ThingDef[defName = "Thrumbo"]/comps</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>*/ThingDef[defName = "Thrumbo"]</xpath>
            <value>
              <comps>
                <li Class="CompProperties_Shearable">
                  <woolDef>ThrumboWool</woolDef>
                  <shearIntervalDays>60</shearIntervalDays>
                  <woolAmount>200</woolAmount>
                </li>
              </comps>
            </value>
          </nomatch>
          <match Class="PatchOperationAdd">
            <xpath>*/ThingDef[defName = "Thrumbo"]/comps</xpath>
            <value>
              <li Class="CompProperties_Shearable">
                <woolDef>ThrumboWool</woolDef>
                <shearIntervalDays>60</shearIntervalDays>
                <woolAmount>200</woolAmount>
              </li>
            </value>
          </match>
        </li>
      </operations>
    </match>
  </Operation>
	
  <Operation Class="AllTheTweaks.PatchOperation.ATTPatchOperationToggleable">
    <enabled>True</enabled>
    <mods>
      <li>Core</li>
    </mods>
    <label>_canThrumbosBeMilked</label>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationConditional">
          <xpath>*/ThingDef[defName = "Thrumbo"]/comps</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>*/ThingDef[defName = "Thrumbo"]</xpath>
            <value>
              <comps>
                <li Class="CompProperties_Milkable">
                  <milkDef>ThrumboMilk</milkDef>
                  <milkIntervalDays>15</milkIntervalDays>
                  <milkAmount>5</milkAmount>
                </li>
              </comps>
            </value>
          </nomatch>
          <match Class="PatchOperationAdd">
            <xpath>*/ThingDef[defName = "Thrumbo"]/comps</xpath>
            <value>
              <li Class="CompProperties_Milkable">
                <milkDef>ThrumboMilk</milkDef>
                <milkIntervalDays>15</milkIntervalDays>
                <milkAmount>5</milkAmount>
              </li>
            </value>
          </match>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>